
{{!-- All blog posts --}}
<div class="all-posts">
    <h3 class="all-posts-header">Latest Blog Posts</h3>
    {{!-- Dynamically create recent blog posts --}}
    {{#each blog_posts as |post|}}
    <div class="blog-post">
        <div class="post-header">
            <h3 class="post-title">{{post.title}}</h3>
            <p class="post-content">{{post.content}}</p>
        </div>
        <div class="post-details">
            <p class="post-user">Posted by: @{{post.user_id}}</p>
            <p class="post-date"> Date Posted: {{post.created_at}} </p>
        </div>
    </div>
    {{/each}}

</div>