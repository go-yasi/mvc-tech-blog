<img class="hello-there graphic" src="/../../assets/graphics/hello-there.png" alt="Pixel art of speech bubble that says Hello There!">
<h2 class="signup-title">Sign Up</h2>
{{!-- Signup Form --}}
<form class="form signup-form">
  <div class="form-group">
    {{!-- Ask for username --}}
    <label for="username-signup">Create a Username:</label>
    <input class="form-input" type="text" id="username-signup" placeholder="username"/>
  </div>
  <div class="form-group">
    {{!-- Ask for user password --}}
    <label for="password-signup">Create a Password:</label>
    <input class="form-input" type="password" id="password-signup" placeholder="password"/>
  </div>
  <div class="form-group">
    {{!-- Signup button --}}
    <button class="btn signup-button" type="submit">signup</button>
  </div>
  <div class="form-group">
    <a href="/signup">Need to log in instead?</a>
  </div>
</form>

<script src="./js/signup.js"></script>