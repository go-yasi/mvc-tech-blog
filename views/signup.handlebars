<div class="signup-block">
  <h2 class="signup-title">Sign Up</h2>
  <img class="hello-there graphic" src="/../../assets/graphics/hello-there.png" alt="Pixel art of speech bubble that says Hello There!">
  {{!-- Signup Form --}}
  <form class="form signup-form">
    {{!-- Ask for username --}}
    <div class="form-group">
      <label class="label" for="username-signup">Create a Username:</label>
      <br>
      <input class="form-input" type="text" id="username-signup" placeholder="username"/>
      </div>
      {{!-- Ask for user password --}}
    <div class="form-group">
      <label class="label" for="password-signup">Create a Password:</label>
      <br>
      <input class="form-input" type="password" id="password-signup" placeholder="password"/>
    </div>
    {{!-- Signup button --}}
    <div class="form-group">
      <button class="btn signup-button" type="submit">Sign Up</button>
    </div>
    <div class="form-group">
      <a class="login-link" href="/login">Need to log in instead?</a>
    </div>
  </form>
</div>


<script src="./js/signup.js"></script>